<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url('<%= @garden.banner_url %>');">
  <div class="container">
    <h1><%= @garden.name %></h1>
  </div>
</div>

<div class="row">
  <% @garden.plants.each do |plant| %>
    <div class="card-category col-md-4" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= plant.image_url %>')">
      <%= plant.name %>
      <%= link_to "+", plant_path({id: plant.id, name: 'hello'}), method: :delete, data: { confirm: "Are you sure?" }, class: "card-remove-link" %>
    </div>
  <% end -%>
</div>



<div class="d-flex w-100 justify-content-center">
  <div class="col-md-4">
    <%= simple_form_for [@garden, @plant] do |f| %>
      <%= f.input :name %>
      <%= f.input :image_url %>
      <%= f.submit %>
    <% end -%>
  </div>
</div>
